<%== render('stations/partials/_breadcrumbs', { locals: { station: @station, active: 'General' } } ) %>
<%== render('stations/partials/_tabs', { locals: { station: @station, active: 'general'  } } ) %>

<h3>Edit general, <%= @station.name %></h3>

<div class="row">
  <div class="col-md-6">
    <form action="/stations/edit" method="post">
      <%== csrf_tag %>
      <%== render('stations/forms/_general', { locals: { station: @station} }) %>
      <input type="hidden" name="type" value="general" />
      <input type="hidden" name="index" value="<%= @station.index %>" />
      <button type="submit" class="btn btn-default fixed">Update</button>
    </form>
  </div>
  <div class="col-md-6">
    <div id="map-general"></div>
  </div>
</div>

<%== render('stations/partials/_map', { locals: { station: @station } } ) %>











