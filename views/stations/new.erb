<h4>Choose station type</h4>

<div class="row">
  <div class="col-md-6">
    <p>
      Will the new station be a
      reference station <%== help_tooltip(:help_reference_station) %>
      or a subordinate station <%== help_tooltip(:help_subordinate_station) %>?
    </p>
    <p>
      For Reference Station Leave "Reference Station"'s select box blank.
    </p>
  </div>
</div>

<h3></h3>

<div class="row">
  <div class="col-md-6">
    <form action="/stations/new" method="post">
      <%== csrf_tag %>
      <%== render('stations/forms/_general', { locals: { station: @station} }) %>
      <input type="hidden" name="stations[datum]" value="0" >
      <input type="hidden" name="stations[meridian]" value="0" >
      <button type="submit" class="btn btn-default fixed">Save and continue</button>
    </form>
  </div>
  <div class="col-md-6">
    <div id="map-general">This is a map</div>
  </div>
</div>

<%== render('stations/partials/_map', { locals: { station: @station } } ) %>





