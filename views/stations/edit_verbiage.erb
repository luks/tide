<%== render('stations/partials/_breadcrumbs', { locals: { station: @station, active: 'Verbiage' } } ) %>
<%== render('stations/partials/_tabs', { locals: { station: @station, active: 'verbiage'  } } ) %>

<h3>Edit verbiage</h3>

<div class="row">
  <div class="col-md-6">
    <form action="/stations/edit" method="post">
      <input type="hidden" name="type" value="verbiage" />
      <input type="hidden" name="index" value="<%= @station.index %>" />
      <%== csrf_tag %>
      <%== render('stations/forms/_verbiage', { locals: { station: @station } } ) %>
      <button type="submit" class="btn btn-default">Update</button>
    </form>
  </div>
  <div class="col-md-6">
    <div id="map-general"></div>
  </div>
</div>