<%== render('stations/partials/_breadcrumbs', { locals: { station: @station, active: 'Offset' } } ) %>
<%== render('stations/partials/_tabs', { locals: { station: @station, active: 'offset'  } } ) %>

<h3></h3>

<div class="row">
  <div class="col-md-6">
    <form action="/stations/edit" method="post">
      <input type="hidden" name="type" value="offset" />
      <input type="hidden" name="index" value="<%= @station.index %>" />
      <%== csrf_tag %>
      <% if @station.is_subordinate? %>
        <%== render('stations/forms/_offset', { locals: { station: @station } } ) %>
      <% end %>
      <button type="submit" class="btn btn-default">Update</button>
    </form>
  </div>
  <div class="col-md-6">
    <div id="map-general"></div>
  </div>
</div>

