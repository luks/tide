<div class="form-inline">
  <div class="form-group <%= form_error_class(constant, :name) %>">
    <% if select_constituents %>
      <select name="constants[][name]" class="form-control input-sm input-sel-sm" >
        <% Constituent.exclude(name: station.constants.map(&:name)).each do |const| %>
          <option value="<%= const.name %>" <%= (const.name == constant.name) ? "selected='selected'" : '' %> ><%= const.name %></option>
        <% end %>
      </select>
    <% else %>
      <input name="constants[][name]" class="form-control input-sm" value="<%= constant.name %>" disabled="disabled">
      <input type="hidden" name="constants[][name]" value="<%= constant.name %>"/>
      <% unless constant.new? %>
        <input type="hidden" name="constants[][index]" value="<%= constant.index %>"/>
      <% end %>
    <% end %>
  </div>
  <div class="form-group <%= form_error_class(constant, :amp) %>">
    <input type="text" name="constants[][amp]" class="form-control input-sm" placeholder="Amplitude" value="<%= constant.amp  %>" />
  </div>

  <div class="form-group <%= form_error_class(constant, :phase) %>">
    <input type="text" name="constants[][phase]" class="form-control input-sm" placeholder="Phase" value="<%= constant.phase  %>" />
  </div>

  <div class="form-group">
    <button class="form-control btn btn-danger btn-sm input-sm" data-role="remove">
      -
    </button>
    <button class="form-control btn btn-primary btn-sm input-sm" data-role="add">
      +
    </button>
  </div>
</div>


