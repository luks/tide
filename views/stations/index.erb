

<div class="table-responsive">
  <table class="table table-striped table-condensed table-hover">
    <thead>
    <tr>
      <th>Station id</th>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Country</th>
      <th>Time zone</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.station_id %></td>
        <td><a href="/stations/<%= station.index %>/show"><%= station.name %></a></td>
        <td><%= station.lat %></td>
        <td><%= station.lng %></td>
        <td><%= station.country %></td>
        <td><%= station.timezone %></td>
        <td><a href="/stations/<%= station.index %>/edit">Edit</a></td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>


