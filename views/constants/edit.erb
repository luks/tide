<% #form_attr = { :action=> @action, :method=>:post} %>
<% form_attr = {:action=>"/album"} %>
<% form_opts = {:config=>:bs3,  :label=>false} %>
<% subform_opts = { :grid=>false } %>

<% @constants.each do |constant| %>
  <% form(constant, form_attr, form_opts) do |f| %>
      <%  f.tag(:div, :class=>"row") do %>
        <%  f.tag(:div, :class=>"col-md-2") do %>
           <%== f.input(:name, :label=>false) %>
        <% end %>
        <%  f.tag(:div, :class=>"col-md-2") do %>
           <%== f.input(:phase, :label=>false) %>
        <% end %>
        <%  f.tag(:div, :class=>"col-md-2") do %>
            <%== f.input(:amp, :label=>false) %>
        <% end %>
        <% f.subform(:constituent,:legend=>false, :skip_primary_key=>true, :inputs_wrapper=>false) do  %>
            <%  f.tag(:div, :class=>"col-md-2") do %>
                <%== f.input(:speed, :label=>false) %>
            <%  end %>
            <%  f.tag(:div, :class=>"col-md-2") do %>
                <%== f.input(:definition, :label=>false) %>
            <%  end %>
        <%  end %>

        <%  f.tag(:div, :class=>"col-md-2") do %>
            <%== f.button(:type => 'submit', :value => 'Update constituent') %>
        <% end %>
      <%  end %>
  <% end %>
<% end %>





